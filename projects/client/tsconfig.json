{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "paths": {
      "common/*": [
        "../../packages/common/src/*"
      ],
      "client/*": [
        "./src/*"
      ],
      "api/*": [
        "../../packages/api/*"
      ]
    },
    "strict": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
